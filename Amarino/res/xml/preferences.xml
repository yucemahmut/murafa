<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  
	<EditTextPreference 
		android:key="settings_default_address"
		android:negativeButtonText="@string/cancel" 
		android:positiveButtonText="@string/ok" 
		android:dialogMessage="@string/pref_last_device_address_dialog_msg" 
		android:defaultValue="@string/pref_last_device_address_default_value" 
		android:summary="@string/pref_last_device_address_summary" 
		android:dialogTitle="@string/pref_last_device_address_dialog_title" 
		android:title="@string/pref_last_device_address_title"
	/>
	
	<CheckBoxPreference
		android:key="settings_stay_connected"
		android:title="@string/pref_stay_connected_title" 
		android:summary="@string/pref_stay_connected_summary"
		android:defaultValue="@string/pref_stay_connected_default_value"
	android:enabled="false"/>
	
	<ListPreference 
		android:key="settings_alive_period"
		android:title="@string/pref_alive_period_title" 
		android:summary="@string/pref_alive_period_summary" 
		android:dialogTitle="@string/pref_alive_period_title" 
		android:entries="@array/entries_alive_period"
		android:entryValues="@array/values_alive_period" 
		android:defaultValue="@string/pref_alive_period_default_value" 
	/>

	<!-- This pref is obsolete and will be replaced by sensor reading rate preference 
		 Text description already changed. -->
	<ListPreference 
		android:key="settings_sensor_reading_rate"
		android:title="@string/pref_sensor_reading_rate_title" 
		android:summary="@string/pref_sensor_reading_rate_summary" 
		android:dialogTitle="@string/pref_sensor_reading_rate_title" 
		android:entries="@array/entries_sensor_reading_rate"
		android:entryValues="@array/values_sensor_reading_rate" 
		android:defaultValue="@string/pref_sensor_reading_rate_default_value" 
		android:enabled="false"/>
	
</PreferenceScreen>
